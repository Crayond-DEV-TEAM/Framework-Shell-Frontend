{
  "extends": "tsconfig/react-library.json",
  "include": ["src", "../../packages/ui/components/rootLayout"],
  "compilerOptions": {
    "jsx": "react",
    "jsx": "react",
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@router": [
        "router"
      ],
      "@router/*": [
        "router/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@pages": [
        "pages"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@styles": [
        "styles"
      ]
    },
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
